@model EVETrader.Web.Models.SalesOrderDetailsView


<p>
    <a asp-action="AddItem" asp-controller="SalesOrders" asp-route-id="@Model.Id">Add Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingList[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingList[0].TypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeId)
                </td>
                <td>
                    <a asp-action="removeItem" asp-route-id="@item.Id" asp-route-salesOrderId="@Model.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
